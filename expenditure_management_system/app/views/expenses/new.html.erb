<%= form_for @expense do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name , :class => "input" %></br>
  <%= alert_helper @expense.errors[:name] %>
  
  <%= f.label :categories %>
  <%= f.collection_select(:category_id, @categories, :id, :name, :include_blank => "select category") %></br>
  <%= alert_helper @expense.errors[:category] %>
  
  <%= f.label :number_of_item %>
  <%= f.text_field :number_of_item ,:class => "input" %></br>
  <%= alert_helper @expense.errors[:date] %>
  
  <%= f.label :price_per_item %>
  <%= f.text_field :price_per_item ,:class => "input" %></br>
  <%= alert_helper @expense.errors[:date] %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>
  
  <%= f.label :date %>
  <%= f.text_field :date ,:class => "input" , :id => "request_date" %></br>
  <%= alert_helper @expense.errors[:date] %>
  
  <%= f.submit %>
<% end %>

<script>
   $(function() {
     $(request_date).datepicker({format: 'yyyy-mm-dd'}) ;
   });   
</script>
